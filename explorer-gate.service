[Unit]
Description=Minter Explorer Gete Service
Wants=network-online.target
Requires=postgreql.service
After=network.target network-online.target

[Service]
Type=simple
KillMode=process
TimeoutStartSec=10
Restart=always
RestartSec=15s
WorkingDirectory=/opt/minter/gate/current
ExecStart=/opt/minter/gate/current/gate

User=minter
Group=minter

[Install]
WantedBy=multi-user.target
